@model LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container">
    <div class="auth">
        <div class="auth-container">
            <div class="auth-row">
                <div class="auth__login auth__block">
                    <h3 class="auth__title">Bạn đã có tài khoản IVY</h3>
                    <div class="auth__login__content">
                        <p class="auth__description">
                            Nếu bạn đã có tài khoản, hãy đăng nhập để tích lũy điểm
                            thành viên và nhận được những ưu đãi tốt hơn!
                        </p>
                        <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post"
                              id="login-form"
                              class="auth__form login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-2 alert alert-danger"></div>
                            <div class="form-group">
                                <input asp-for="EmailOrPhoneNumber" class="form-control"
                                       type="text"
                                       placeholder="Email/SĐT"
                                       value=""
                                       autofocus />
                                <span asp-validation-for="EmailOrPhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control"
                                       type="password"
                                       placeholder="Mật khẩu" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="auth__form__options">
                                <div class="form-checkbox user-select-none">
                                    <label>
                                        <input asp-for="RememberMe" class="checkboxs"
                                               type="checkbox" />
                                        <span> Ghi nhớ đăng nhập</span>
                                    </label>
                                </div>
                                <a class="auth__form__link"
                                   href="https://ivymoda.com/customer/forgotpass">
                                    Quên mật khẩu?
                                </a>
                            </div>
                            <div class="auth__form__buttons">
                                <button class="btn btn--large">Đăng nhập</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="auth__register auth__block">
                    <h3 class="auth__title">Khách hàng mới của IVY moda</h3>
                    <div class="auth__login__content">
                        <p class="auth__description">
                            Nếu bạn chưa có tài khoản trên ivymoda.com, hãy sử dụng tùy
                            chọn này để truy cập biểu mẫu đăng ký.
                        </p>
                        <p class="auth__description">
                            Bằng cách cung cấp cho IVY moda thông tin chi tiết của bạn,
                            quá trình mua hàng trên ivymoda.com sẽ là một trải nghiệm
                            thú vị và nhanh chóng hơn!
                        </p>
                        <div class="auth__form__buttons">
                            <a asp-area="Identity" asp-controller="Account" asp-action="Register">
                                <button class="btn btn--large">Đăng ký</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}